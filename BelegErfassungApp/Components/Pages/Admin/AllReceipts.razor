@page "/admin/allreceipts"
@rendermode InteractiveServer

@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Authorization
@using BelegErfassungApp.Data
@using BelegErfassungApp.Services
@using BelegErfassungApp.Components.Account.Shared
@using Microsoft.AspNetCore.Components.Authorization

@attribute [Authorize(Roles = "Administrator")]

@inject IReceiptService ReceiptService
@inject IJSRuntime JSRuntime

<PageTitle>Alle Belege (Admin)</PageTitle>

<h3>Alle Belege</h3>

<div class="row mb-3">
    <div class="col-md-3">
        <div class="card text-white bg-warning mb-2">
            <div class="card-body">
                <h6 class="card-title mb-1">Offen</h6>
                <span class="fs-4">@receipts.Count(r => r.Status == ReceiptStatus.Offen)</span>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-info mb-2">
            <div class="card-body">
                <h6 class="card-title mb-1">In Bearbeitung</h6>
                <span class="fs-4">@receipts.Count(r => r.Status == ReceiptStatus.InBearbeitung)</span>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-success mb-2">
            <div class="card-body">
                <h6 class="card-title mb-1">Abgeschlossen</h6>
                <span class="fs-4">@receipts.Count(r => r.Status == ReceiptStatus.Abgeschlossen)</span>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-primary mb-2">
            <div class="card-body">
                <h6 class="card-title mb-1">Gesamt</h6>
                <span class="fs-4">@receipts.Count</span>
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mb-2">
    <h5 class="mb-0">Alle Belege (@filteredReceipts.Count())</h5>
    <select class="form-select form-select-sm w-auto" @onchange="FilterByStatus">
        <option value="">Alle Status</option>
        <option value="Offen">Offen</option>
        <option value="InBearbeitung">In Bearbeitung</option>
        <option value="Abgeschlossen">Abgeschlossen</option>
    </select>
</div>

@if (filteredReceipts.Any())
{
    <div class="table-responsive mt-2">
        <table class="table table-striped table-hover table-sm align-middle">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Benutzer</th>
                    <th>Dateiname</th>
                    <th>Upload</th>
                    <th>Belegdatum</th>
                    <th>Manuell</th>
                    <th>OCR Brutto</th>
                    <th>OCR Netto</th>
                    <th>OCR MwSt.</th>
                    <th>Konf.</th>
                    <th>Status</th>
                    <th style="width: 170px;">Aktionen</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var receipt in filteredReceipts)
                {
                    var currentReceiptId = receipt.Id;
                    var currentStatus = receipt.Status;

                    <tr>
                        <td>@receipt.Id</td>
                        <td>@receipt.User?.UserName</td>
                        <td>@receipt.FileName</td>
                        <td>@receipt.UploadDate.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@receipt.ReceiptDate.ToString("dd.MM.yyyy")</td>
                        <td>@receipt.ManualPrice.ToString("C")</td>
                        <td>@(receipt.OcrGrossAmount?.ToString("C") ?? "-")</td>
                        <td>@(receipt.OcrNetAmount?.ToString("C") ?? "-")</td>
                        <td>@(receipt.OcrVatAmount?.ToString("C") ?? "-")</td>
                        <td>
                            @if (receipt.OcrConfidence.HasValue)
                            {
                                var cls = GetConfidenceBadgeClass(receipt.OcrConfidence.Value);
                                <span class="badge @cls">
                                    @receipt.OcrConfidence.Value.ToString("P0")
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">n/a</span>
                            }
                        </td>
                        <td>
                            <select class="form-select form-select-sm"
                                    @onchange="@((ChangeEventArgs e) => OnStatusChangedWrapper(currentReceiptId, e))">
                                <option value="Offen" selected="@(currentStatus == ReceiptStatus.Offen)">Offen</option>
                                <option value="InBearbeitung" selected="@(currentStatus == ReceiptStatus.InBearbeitung)">In Bearbeitung</option>
                                <option value="Abgeschlossen" selected="@(currentStatus == ReceiptStatus.Abgeschlossen)">Abgeschlossen</option>
                            </select>
                        </td>
                        <td>
                            <button class="btn btn-sm btn-primary me-1"
                                    @onclick="@(() => ViewDetails(receipt.Id))">
                                <i class="bi bi-eye"></i> Details
                            </button>
                            <button class="btn btn-sm btn-danger"
                                    @onclick="@(() => ConfirmDelete(receipt.Id))">
                                <i class="bi bi-trash"></i> Löschen
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        Keine Belege vorhanden.
    </div>
}

@if (showDetailsPopup && selectedReceipt != null)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-xl modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Beleg-Details (ID: @selectedReceipt.Id)</h5>
                    <button type="button" class="btn-close" @onclick="CloseDetailsPopup"></button>
                </div>
                <div class="modal-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="mb-0">Belegdetails</h6>
                        @if (!isEditMode)
                        {
                            <button class="btn btn-sm btn-warning" @onclick="EnableEditMode">
                                <i class="bi bi-pencil"></i> Bearbeiten
                            </button>
                        }
                        else
                        {
                            <div>
                                <button class="btn btn-sm btn-success me-2" @onclick="SaveManualChanges">
                                    <i class="bi bi-check-lg"></i> Speichern
                                </button>
                                <button class="btn btn-sm btn-secondary" @onclick="CancelEdit">
                                    <i class="bi bi-x-lg"></i> Abbrechen
                                </button>
                            </div>
                        }
                    </div>

                    @if (selectedReceipt.OcrConfidence.HasValue && selectedReceipt.OcrConfidence.Value < 0.6 && !isEditMode)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            <strong>Niedrige OCR-Konfidenz (@selectedReceipt.OcrConfidence.Value.ToString("P0"))</strong>
                            <p class="mb-0">
                                Dieser Beleg könnte handschriftlich oder schwer lesbar sein.
                                Bitte prüfe die OCR-Ergebnisse manuell.
                            </p>
                        </div>
                    }

                    @if (!isEditMode)
                    {
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <table class="table table-sm">
                                    <tbody>
                                        <tr>
                                            <th>Benutzer:</th>
                                            <td>@(selectedReceipt.User?.UserName ?? "unbekannt")</td>
                                        </tr>
                                        <tr>
                                            <th>Dateiname:</th>
                                            <td>@selectedReceipt.FileName</td>
                                        </tr>
                                        <tr>
                                            <th>Upload:</th>
                                            <td>@selectedReceipt.UploadDate.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                                        </tr>
                                        <tr>
                                            <th>Belegdatum:</th>
                                            <td>@selectedReceipt.ReceiptDate.ToString("dd.MM.yyyy")</td>
                                        </tr>
                                        <tr>
                                            <th>Preis (manuell):</th>
                                            <td>@selectedReceipt.ManualPrice.ToString("C")</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-md-6">
                                <table class="table table-sm">
                                    <tbody>
                                        <tr>
                                            <th>OCR Brutto:</th>
                                            <td>@(selectedReceipt.OcrGrossAmount?.ToString("C") ?? "nicht erkannt")</td>
                                        </tr>
                                        <tr>
                                            <th>OCR Netto:</th>
                                            <td>@(selectedReceipt.OcrNetAmount?.ToString("C") ?? "nicht erkannt")</td>
                                        </tr>
                                        <tr>
                                            <th>OCR MwSt.:</th>
                                            <td>@(selectedReceipt.OcrVatAmount?.ToString("C") ?? "nicht erkannt")</td>
                                        </tr>
                                        <tr>
                                            <th>Belegdatum (OCR):</th>
                                            <td>@(selectedReceipt.OcrReceiptDate?.ToString("dd.MM.yyyy") ?? "nicht erkannt")</td>
                                        </tr>
                                        <tr>
                                            <th>OCR Konfidenz:</th>
                                            <td>
                                                @if (selectedReceipt.OcrConfidence.HasValue)
                                                {
                                                    <span class="badge @GetConfidenceBadgeClass(selectedReceipt.OcrConfidence.Value)">
                                                        @selectedReceipt.OcrConfidence.Value.ToString("P0")
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span>n/a</span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Status:</th>
                                            <td>@GetStatusDisplayName(selectedReceipt.Status)</td>
                                        </tr>
                                        <tr>
                                            <th>Letzte Statusänderung:</th>
                                            <td>@(selectedReceipt.StatusChangedDate?.ToLocalTime().ToString("dd.MM.yyyy HH:mm") ?? "keine")</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            <strong>Bearbeitungsmodus:</strong> Korrigiere die OCR-Ergebnisse manuell.
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Belegdatum</label>
                                <input type="date" class="form-control" @bind="editReceipt.ReceiptDate" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Preis (€)</label>
                                <input type="number" step="0.01" class="form-control" @bind="editReceipt.ManualPrice" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">OCR Bruttobetrag (€)</label>
                                <input type="number" step="0.01" class="form-control" @bind="editReceipt.OcrGrossAmount" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">OCR Nettobetrag (€)</label>
                                <input type="number" step="0.01" class="form-control" @bind="editReceipt.OcrNetAmount" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">OCR MwSt. (€)</label>
                                <input type="number" step="0.01" class="form-control" @bind="editReceipt.OcrVatAmount" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Belegdatum (OCR)</label>
                                <input type="date" class="form-control" @bind="editReceipt.OcrReceiptDate" />
                            </div>
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-12">
                            <h6>Belegvorschau</h6>
                            <div class="card">
                                <div class="card-body text-center">
                                    @if (selectedReceipt.FilePath.EndsWith(".pdf", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <iframe src="@GetReceiptUrl(selectedReceipt.FilePath)"
                                                style="width: 100%; height: 600px; border: 1px solid #ddd;"
                                                title="PDF Vorschau">
                                        </iframe>
                                        <div class="mt-2">
                                            <a href="@GetReceiptUrl(selectedReceipt.FilePath)"
                                               target="_blank"
                                               class="btn btn-sm btn-primary">
                                                <i class="bi bi-download"></i> PDF herunterladen
                                            </a>
                                        </div>
                                    }
                                    else
                                    {
                                        <img src="@GetReceiptUrl(selectedReceipt.FilePath)"
                                             alt="Beleg"
                                             class="img-fluid"
                                             style="max-height: 600px; border: 1px solid #ddd;" />
                                        <div class="mt-2">
                                            <a href="@GetReceiptUrl(selectedReceipt.FilePath)"
                                               target="_blank"
                                               class="btn btn-sm btn-primary">
                                                <i class="bi bi-download"></i> Bild herunterladen
                                            </a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4" />
                    <ReceiptCommentSection ReceiptId="@selectedReceipt.Id" />
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseDetailsPopup">Schließen</button>
                </div>
            </div>
        </div>
    </div>
}

@if (showDeleteConfirmation && receiptToDelete != null)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Beleg löschen?</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CancelDelete"></button>
                </div>
                <div class="modal-body">
                    <p>Möchtest du diesen Beleg wirklich unwiderruflich löschen?</p>
                    <table class="table table-sm">
                        <tbody>
                            <tr>
                                <th>ID</th>
                                <td>@receiptToDelete.Id</td>
                            </tr>
                            <tr>
                                <th>Benutzer</th>
                                <td>@(receiptToDelete.User?.UserName ?? "unbekannt")</td>
                            </tr>
                            <tr>
                                <th>Dateiname</th>
                                <td>@receiptToDelete.FileName</td>
                            </tr>
                            <tr>
                                <th>Belegdatum</th>
                                <td>@receiptToDelete.ReceiptDate.ToString("dd.MM.yyyy")</td>
                            </tr>
                            <tr>
                                <th>Preis</th>
                                <td>@receiptToDelete.ManualPrice.ToString("C")</td>
                            </tr>
                        </tbody>
                    </table>
                    <p class="text-danger fw-bold">
                        Diese Aktion kann nicht rückgängig gemacht werden!
                    </p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CancelDelete">Abbrechen</button>
                    <button class="btn btn-danger" @onclick="DeleteReceipt" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                            <span>Wird gelöscht...</span>
                        }
                        else
                        {
                            <i class="bi bi-trash me-1"></i>
                            <span>Endgültig löschen</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Receipt> receipts = new();
    private IEnumerable<Receipt> filteredReceipts = new List<Receipt>();
    private string? selectedStatus;
    private bool showDetailsPopup = false;
    private Receipt? selectedReceipt;
    private bool showDeleteConfirmation = false;
    private Receipt? receiptToDelete;
    private bool isDeleting = false;

    private bool isEditMode = false;
    private Receipt? editReceipt = null;

    [CascadingParameter]
    private Task<AuthenticationState>? AuthenticationStateTask { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await LoadReceipts();
    }

    private async Task LoadReceipts()
    {
        try
        {
            receipts = await ReceiptService.GetAllReceiptsAsync();
            filteredReceipts = receipts;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Fehler beim Laden der Belege: {ex.Message}");
        }
    }

    private async Task<string> GetCurrentAdminUserIdAsync()
    {
        var authState = await AuthenticationStateTask!;
        return authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? "unknown";
    }

    private async Task OnStatusChangedWrapper(int receiptId, ChangeEventArgs e)
    {
        if (Enum.TryParse<ReceiptStatus>(e.Value?.ToString(), out var newStatus))
        {
            await ChangeStatus(receiptId, newStatus);
        }
    }

    private async Task ChangeStatus(int receiptId, ReceiptStatus newStatus)
    {
        try
        {
            var adminUserId = await GetCurrentAdminUserIdAsync();
            await ReceiptService.UpdateStatusAsync(receiptId, newStatus, adminUserId);
            await LoadReceipts();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Fehler bei Statusänderung: {ex.Message}");
        }
    }

    private void FilterByStatus(ChangeEventArgs e)
    {
        selectedStatus = e.Value?.ToString();

        if (string.IsNullOrEmpty(selectedStatus))
        {
            filteredReceipts = receipts;
        }
        else if (Enum.TryParse(selectedStatus, out ReceiptStatus status))
        {
            filteredReceipts = receipts.Where(r => r.Status == status).ToList();
        }
    }

    private string GetConfidenceBadgeClass(double confidence)
    {
        if (confidence >= 0.8) return "bg-success";
        if (confidence >= 0.6) return "bg-warning";
        return "bg-danger";
    }

    private void ViewDetails(int receiptId)
    {
        selectedReceipt = receipts.FirstOrDefault(r => r.Id == receiptId);
        showDetailsPopup = selectedReceipt != null;
        isEditMode = false;
        editReceipt = null;
    }

    private void CloseDetailsPopup()
    {
        showDetailsPopup = false;
        selectedReceipt = null;
        isEditMode = false;
        editReceipt = null;
    }

    private string GetStatusDisplayName(ReceiptStatus status)
    {
        return status switch
        {
            ReceiptStatus.Offen => "Offen",
            ReceiptStatus.InBearbeitung => "In Bearbeitung",
            ReceiptStatus.Abgeschlossen => "Abgeschlossen",
            _ => status.ToString()
        };
    }

    private string GetReceiptUrl(string filePath)
    {
        if (filePath.StartsWith("wwwroot/"))
        {
            filePath = filePath.Substring(8);
        }

        if (!filePath.StartsWith("/"))
        {
            filePath = "/" + filePath;
        }

        return filePath;
    }

    private void ConfirmDelete(int receiptId)
    {
        receiptToDelete = receipts.FirstOrDefault(r => r.Id == receiptId);
        showDeleteConfirmation = receiptToDelete != null;
    }

    private void CancelDelete()
    {
        showDeleteConfirmation = false;
        receiptToDelete = null;
    }

    private void EnableEditMode()
    {
        if (selectedReceipt == null) return;

        isEditMode = true;
        editReceipt = new Receipt
        {
            Id = selectedReceipt.Id,
            ReceiptDate = selectedReceipt.ReceiptDate,
            ManualPrice = selectedReceipt.ManualPrice,
            OcrGrossAmount = selectedReceipt.OcrGrossAmount,
            OcrNetAmount = selectedReceipt.OcrNetAmount,
            OcrVatAmount = selectedReceipt.OcrVatAmount,
            OcrReceiptDate = selectedReceipt.OcrReceiptDate,
            OcrConfidence = selectedReceipt.OcrConfidence,
            FileName = selectedReceipt.FileName,
            FilePath = selectedReceipt.FilePath,
            UserId = selectedReceipt.UserId,
            UploadDate = selectedReceipt.UploadDate,
            Status = selectedReceipt.Status,
            StatusChangedDate = selectedReceipt.StatusChangedDate,
            User = selectedReceipt.User
        };
    }

    private void CancelEdit()
    {
        isEditMode = false;
        editReceipt = null;
    }

    private async Task SaveManualChanges()
    {
        if (editReceipt == null || selectedReceipt == null) return;

        try
        {
            selectedReceipt.ReceiptDate = editReceipt.ReceiptDate;
            selectedReceipt.ManualPrice = editReceipt.ManualPrice;
            selectedReceipt.OcrGrossAmount = editReceipt.OcrGrossAmount;
            selectedReceipt.OcrNetAmount = editReceipt.OcrNetAmount;
            selectedReceipt.OcrVatAmount = editReceipt.OcrVatAmount;
            selectedReceipt.OcrReceiptDate = editReceipt.OcrReceiptDate;

            await ReceiptService.UpdateReceiptAsync(selectedReceipt);

            isEditMode = false;
            editReceipt = null;

            await LoadReceipts();
            await JSRuntime.InvokeVoidAsync("alert", "Änderungen erfolgreich gespeichert!");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Fehler beim Speichern: {ex.Message}");
        }
    }

    private async Task DeleteReceipt()
    {
        if (receiptToDelete == null) return;

        isDeleting = true;

        try
        {
            var adminUserId = await GetCurrentAdminUserIdAsync();
            await ReceiptService.DeleteReceiptAsync(receiptToDelete.Id, adminUserId);

            showDeleteConfirmation = false;
            receiptToDelete = null;

            await LoadReceipts();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Fehler beim Löschen: {ex.Message}");
        }
        finally
        {
            isDeleting = false;
        }
    }
}
