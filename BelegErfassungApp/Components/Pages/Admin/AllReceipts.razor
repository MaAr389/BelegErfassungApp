@rendermode InteractiveServer
@page "/Admin/AllReceipts"
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Forms
@using BelegErfassungApp.Data
@using BelegErfassungApp.Services
@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Authorization

@attribute [Authorize(Roles = "Administrator")]

@inject IReceiptService ReceiptService
@inject IJSRuntime JSRuntime

<PageTitle>Alle Belege - Administration</PageTitle>

<style>
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 9999;
    }

    .modal-dialog {
        background: white;
        border-radius: 8px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        max-width: 600px;
        width: 90%;
        position: relative;
        z-index: 10000; /* HÖHER als overlay */
    }

        .modal-dialog button {
            pointer-events: auto !important; /* WICHTIG */
            cursor: pointer !important;
        }

    }
</style>

<div class="container-fluid mt-4">
    <h3>Belegverwaltung - Alle Belege</h3>

    <div class="row mb-3">
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">Offen</h5>
                    <p class="card-text display-6">@receipts.Count(r => r.Status == ReceiptStatus.Offen)</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h5 class="card-title">In Bearbeitung</h5>
                    <p class="card-text display-6">@receipts.Count(r => r.Status == ReceiptStatus.InBearbeitung)</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">Abgeschlossen</h5>
                    <p class="card-text display-6">@receipts.Count(r => r.Status == ReceiptStatus.Abgeschlossen)</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">Gesamt</h5>
                    <p class="card-text display-6">@receipts.Count</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Alle Belege (@filteredReceipts.Count())</h5>
            <div>
                <select class="form-select form-select-sm" @onchange="FilterByStatus">
                    <option value="">Alle Status</option>
                    <option value="Offen">Offen</option>
                    <option value="InBearbeitung">In Bearbeitung</option>
                    <option value="Abgeschlossen">Abgeschlossen</option>
                </select>
            </div>
        </div>
        <div class="card-body">
            @if (filteredReceipts.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Benutzer</th>
                                <th>Dateiname</th>
                                <th>Upload-Datum</th>
                                <th>Belegdatum</th>
                                <th>Manuell</th>
                                <th>OCR Brutto</th>
                                <th>OCR Netto</th>
                                <th>OCR MwSt.</th>
                                <th>Konfidenz</th>
                                <th>Status</th>
                                <th>Aktionen</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var receipt in filteredReceipts)
                            {
                                var currentReceiptId = receipt.Id;
                                var currentStatus = receipt.Status;

                                <tr>
                                    <td>@receipt.Id</td>
                                    <td><small>@receipt.User?.UserName</small></td>
                                    <td><small>@receipt.FileName</small></td>
                                    <td><small>@receipt.UploadDate.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</small></td>
                                    <td>@receipt.ReceiptDate.ToString("dd.MM.yyyy")</td>
                                    <td>@receipt.ManualPrice.ToString("C")</td>
                                    <td>
                                        @if (receipt.OcrGrossAmount.HasValue)
                                        {
                                            <span>@receipt.OcrGrossAmount.Value.ToString("C")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (receipt.OcrNetAmount.HasValue)
                                        {
                                            <span>@receipt.OcrNetAmount.Value.ToString("C")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (receipt.OcrVatAmount.HasValue)
                                        {
                                            <span>@receipt.OcrVatAmount.Value.ToString("C")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (receipt.OcrConfidence.HasValue)
                                        {
                                            <span class="badge @GetConfidenceBadgeClass(receipt.OcrConfidence.Value)">
                                                @receipt.OcrConfidence.Value.ToString("P0")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
@*                                     <td>
                                        <select class="form-select form-select-sm"
                                                @onchange="@((ChangeEventArgs e) => OnStatusChangedWrapper(currentReceiptId, e))">
                                            <option value="Offen" selected="@(currentStatus == ReceiptStatus.Offen)">Offen</option>
                                            <option value="InBearbeitung" selected="@(currentStatus == ReceiptStatus.InBearbeitung)">In Bearbeitung</option>
                                            <option value="Abgeschlossen" selected="@(currentStatus == ReceiptStatus.Abgeschlossen)">Abgeschlossen</option>
                                        </select>
                                    </td> *@
                                    <td>
                                        <button type="button" class="btn btn-sm btn-secondary me-1"
                                                @onclick="() => SetStatusToOffen(currentReceiptId)"
                                                disabled="@(currentStatus == ReceiptStatus.Offen)">
                                            Offen
                                        </button>
                                        <button type="button" class="btn btn-sm btn-warning me-1"
                                                @onclick="() => SetStatusToInBearbeitung(currentReceiptId)"
                                                disabled="@(currentStatus == ReceiptStatus.InBearbeitung)">
                                            In Bearbeitung
                                        </button>
                                        <button type="button" class="btn btn-sm btn-success"
                                                @onclick="() => SetStatusToAbgeschlossen(currentReceiptId)"
                                                disabled="@(currentStatus == ReceiptStatus.Abgeschlossen)">
                                            Abgeschlossen
                                        </button>
                                    </td>



                                    <td>
                                        <button type="button" class="btn btn-sm btn-info" @onclick="() => ViewDetails(currentReceiptId)">
                                            Details
                                        </button>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
@*                                             <button type="button" class="btn btn-sm btn-info" @onclick="() => ViewDetails(currentReceiptId)">
                                                Details
                                            </button> *@
                                            <button type="button" class="btn btn-sm btn-danger" @onclick="() => ConfirmDelete(currentReceiptId)">
                                                Löschen
                                            </button>
                                        </div>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted">Keine Belege vorhanden.</p>
            }
        </div>
    </div>
</div>

