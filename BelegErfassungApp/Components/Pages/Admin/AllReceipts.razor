@code {
    private List<Receipt> receipts = new();
    private IEnumerable<Receipt> filteredReceipts = new List<Receipt>();
    private string? selectedStatus;
    private bool hasRendered = false;  // Diese Variable hinzufügen

    private bool showDetailsPopup = false;
    private Receipt? selectedReceipt;

    private bool showDeleteConfirmation = false;
    private Receipt? receiptToDelete;
    private bool isDeleting = false;

    
    [CascadingParameter]
    private Task<AuthenticationState>? AuthenticationStateTask { get; set; }

    private async Task<string> GetCurrentAdminUserIdAsync()
    {
        var authState = await AuthenticationStateTask;
        return authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? "unknown";
    }


    private async Task TestClick()
    {
        await JSRuntime.InvokeVoidAsync("alert", "Button funktioniert!");
    }


    protected override async Task OnInitializedAsync()
    {
        await LoadReceipts();
    }

     protected override async Task OnAfterRenderAsync(bool firstRender)
     {
         if (firstRender && !hasRendered)
         {
             hasRendered = true;

             if (ReceiptService == null)
             {
                 await JSRuntime.InvokeVoidAsync("alert", "FEHLER: ReceiptService ist NULL!");
             }
             else
             {
                 await JSRuntime.InvokeVoidAsync("alert", "ReceiptService ist OK!");
             }
         }
     }

    private async Task LoadReceipts()
    {
        try
        {
            receipts = await ReceiptService.GetAllReceiptsAsync();
            filteredReceipts = receipts;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Fehler beim Laden: {ex.Message}");
        }
    }

    private async Task SetStatusToOffen(int receiptId)
    {
        await ChangeStatus(receiptId, ReceiptStatus.Offen);
    }

    private async Task SetStatusToInBearbeitung(int receiptId)
    {
        await ChangeStatus(receiptId, ReceiptStatus.InBearbeitung);
    }

    private async Task SetStatusToAbgeschlossen(int receiptId)
    {
        await ChangeStatus(receiptId, ReceiptStatus.Abgeschlossen);
    }

    private async Task ChangeStatus(int receiptId, ReceiptStatus newStatus)
    {
        try
        {
            var adminUserId = await GetCurrentAdminUserIdAsync();
            await ReceiptService.UpdateStatusAsync(receiptId, newStatus, adminUserId);
            //await ReceiptService.UpdateStatusAsync(receiptId, newStatus, userId);
            await LoadReceipts();
            await JSRuntime.InvokeVoidAsync("alert", "Status erfolgreich geändert!");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Fehler: {ex.Message}");
        }
    }

    private void FilterByStatus(ChangeEventArgs e)
    {
        selectedStatus = e.Value?.ToString();

        if (string.IsNullOrEmpty(selectedStatus))
        {
            filteredReceipts = receipts;
        }
        else
        {
            if (Enum.TryParse<ReceiptStatus>(selectedStatus, out var status))
            {
                filteredReceipts = receipts.Where(r => r.Status == status).ToList();
            }
        }

        StateHasChanged();
    }

    private string GetConfidenceBadgeClass(double confidence)
    {
        if (confidence >= 0.8)
            return "bg-success";
        else if (confidence >= 0.6)
            return "bg-warning";
        else
            return "bg-danger";
    }

    private async Task ViewDetails(int receiptId)
    {
        var receipt = receipts.FirstOrDefault(r => r.Id == receiptId);
        if (receipt != null)
        {
            selectedReceipt = receipts.FirstOrDefault(r => r.Id == receiptId);
            showDetailsPopup = selectedReceipt != null;

            var grossAmount = receipt.OcrGrossAmount?.ToString("C") ?? "nicht erkannt";
            var netAmount = receipt.OcrNetAmount?.ToString("C") ?? "nicht erkannt";
            var vatAmount = receipt.OcrVatAmount?.ToString("C") ?? "nicht erkannt";
            var ocrDate = receipt.OcrReceiptDate?.ToString("dd.MM.yyyy") ?? "nicht erkannt";
            var confidence = receipt.OcrConfidence?.ToString("P") ?? "n/a";
            var statusChanged = receipt.StatusChangedDate?.ToLocalTime().ToString("dd.MM.yyyy HH:mm") ?? "keine";

            var message = $"Beleg-Details (ID: {receipt.Id})\n" +
                         $"================================\n" +
                         $"Benutzer: {receipt.User?.UserName}\n" +
                         $"Dateiname: {receipt.FileName}\n" +
                         $"Upload-Datum: {receipt.UploadDate.ToLocalTime():dd.MM.yyyy HH:mm}\n" +
                         $"Belegdatum: {receipt.ReceiptDate:dd.MM.yyyy}\n\n" +
                         $"Manuell eingegeben:\n" +
                         $"- Preis: {receipt.ManualPrice:C}\n\n" +
                         $"OCR-Ergebnisse:\n" +
                         $"- Bruttobetrag: {grossAmount}\n" +
                         $"- Nettobetrag: {netAmount}\n" +
                         $"- MwSt.: {vatAmount}\n" +
                         $"- Belegdatum (OCR): {ocrDate}\n" +
                         $"- Konfidenz: {confidence}\n\n" +
                         $"Status: {GetStatusDisplayName(receipt.Status)}\n" +
                         $"Letzte Statusänderung: {statusChanged}";

            await JSRuntime.InvokeVoidAsync("alert", message);
        }
    }

    private void CloseDetailsPopup()
    {
        showDetailsPopup = false;
        selectedReceipt = null;
    }

    private string GetStatusDisplayName(ReceiptStatus status)
    {
        return status switch
        {
            ReceiptStatus.Offen => "Offen",
            ReceiptStatus.InBearbeitung => "In Bearbeitung",
            ReceiptStatus.Abgeschlossen => "Abgeschlossen",
            _ => status.ToString()
        };
    }

    private async Task DeleteReceipt()
    {
        // ERSTER TEST
        await JSRuntime.InvokeVoidAsync("console.log", "DeleteReceipt GESTARTET");
        await JSRuntime.InvokeVoidAsync("alert", "Methode wurde aufgerufen!");

        // NULL-CHECK
        if (receiptToDelete == null)
        {
            await JSRuntime.InvokeVoidAsync("alert", "FEHLER: receiptToDelete ist NULL!");
            return;
        }

        await JSRuntime.InvokeVoidAsync("alert", $"Versuche Beleg {receiptToDelete.Id} zu löschen");

        isDeleting = true;
        await InvokeAsync(StateHasChanged);

        try
        {
            await JSRuntime.InvokeVoidAsync("alert", "Rufe ReceiptService auf...");

            var adminUserId = await GetCurrentAdminUserIdAsync();
            await ReceiptService.DeleteReceiptAsync(receiptToDelete.Id, adminUserId);

            await JSRuntime.InvokeVoidAsync("alert", "Service-Aufruf erfolgreich!");

            showDeleteConfirmation = false;
            receiptToDelete = null;

            await LoadReceipts();

            await JSRuntime.InvokeVoidAsync("alert", "Beleg gelöscht! ✅");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"FEHLER: {ex.Message}\n\n{ex.StackTrace}");
        }
        finally
        {
            isDeleting = false;
            await InvokeAsync(StateHasChanged);
        }
    }



    private void ConfirmDelete(int receiptId)
    {
        receiptToDelete = receipts.FirstOrDefault(r => r.Id == receiptId);
        showDeleteConfirmation = receiptToDelete != null;
    }

    private void CancelDelete()
    {
        showDeleteConfirmation = false;
        receiptToDelete = null;
    }
}

