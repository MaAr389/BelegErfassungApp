                    </NavLink>
                </div>

                <!-- Mein Profil -->
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/Account/Manage">
                        <span class="bi bi-person-fill nav-menu"></span> Mein Profil
                    </NavLink>
                </div>

                <!-- Logout -->
                <div class="nav-item px-3">
                    <form action="Account/Logout" method="post">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                        <button type="submit" class="nav-link" style="border: none; background: none; cursor: pointer; text-align: left; width: 100%;">
                            <span class="bi bi-arrow-bar-left nav-menu" aria-hidden="true"></span> Logout
                        </button>
                    </form>
                </div>
            </Authorized>
        </AuthorizeView>

        <!-- === FÜR ADMINS === -->
        <AuthorizeView Roles="Administrator">
            <Authorized>
                <!-- Meine Belege -->
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/myreceipts">
                        <span class="bi bi-file-earmark nav-menu"></span> Meine Belege
                    </NavLink>
                </div>

                <!-- Alle Belege -->
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/admin/allreceipts">
                        <span class="bi bi-collection nav-menu"></span> Alle Belege
                    </NavLink>
                </div>

                <!-- Audit Logs -->
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/admin/auditlog">
                        <span class="bi bi-journal-text nav-menu"></span> Audit Logs
                    </NavLink>
                </div>

                <!-- Benutzerverwaltung -->
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/admin/users">
                        <span class="bi bi-people-fill nav-menu"></span> Benutzerverwaltung
                    </NavLink>
                </div>

                <!-- Systemeinstellungen -->
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/admin/settings">
                        <span class="bi bi-gear-fill nav-menu"></span> Systemeinstellungen
                    </NavLink>
                </div>

                <!-- Mein Profil -->
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/Account/Manage">
                        <span class="bi bi-person-fill nav-menu"></span> Mein Profil
                    </NavLink>
                </div>

                <!-- Logout -->
                <div class="nav-item px-3">
                    <form action="Account/Logout" method="post">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                        <button type="submit" class="nav-link" style="border: none; background: none; cursor: pointer; text-align: left; width: 100%;">
                            <span class="bi bi-arrow-bar-left nav-menu" aria-hidden="true"></span> Logout
                        </button>
                    </form>
                </div>
            </Authorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
